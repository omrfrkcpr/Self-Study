<%- include('partials/head') %>
<title>Clarusway FullStack Team - PostList</title>
</head>
<body>
    <div class="container">
        <%- include('partials/header') %>
        <%- include('partials/categories') %>
    </div>
    <main class="container">
        <div class="row g-5">
            <div class="col-md-8">
                <div class="admin-area text-end">
                    <a class="btn btn-primary" href="/post/create">New Post</a>
                </div>
                <h3 class="pb-4 fst-italic border-bottom">
                    Welcome to my blog site.
                </h3>
                <!-- BlogPosts -->
                <% posts.forEach(post => { %>
                 <article class="blog-post">
                    <h2 class="display-5 mb-1">
                        <a href="/post/<%= post.id %>" class="link-body-emphasis text-decoration-none"><%= post.title %></a>
                    </h2>
                    <p class="blog-post-meta"><%= post.createdAt.toLocaleString() %></p>
                    <div class="line-clamp-3">
                        <%#= post.content %>
                        <%- post.content %>
                    </div>
                    <!-- <%#- post.content.substring(0,400) %>... -->
                    <div class="admin-area text-end">
                        <a class="btn btn-sm btn-primary" href="/post/:id/update">Update</a>
                        <a class="btn btn-sm btn-danger" href="/post/<%= post.id %>/delete" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </article>
                <% }) %> 
                
