<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <% console.log(todo) %>
    <div class="container py-4">
      <div class="row">
        <h1 class="mb-2">Single Todo</h1>
        <div class="mb-4">
          <a class="btn btn-sm btn-primary" href="/view">Todo List</a>
          <a class="btn btn-sm btn-success" href="/view/create">New Todo</a>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col"># ID</th>
              <th scope="col"><%= todo.id %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Title</td>
              <td><%= todo.title %></td>
            </tr>
            <tr>
              <td>Description</td>
              <td><%= todo.description %></td>
            </tr>
            <tr>
              <td>Priority</td>
              <td><%= todo.priority %></td>
            </tr>
            <tr>
              <td>Is Done ?</td>
              <td><%= !todo.isDone ? '❌' : '✅' %></td>
            </tr>
            <tr>
              <td>Created Date</td>
              <td><%= todo.createdAt.toLocaleDateString('tr') %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
