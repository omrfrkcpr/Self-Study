<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <% console.log(data) %> <% console.log(priorityList) %>
    <div class="container py-4">
      <div class="row">
        <h1 class="text-danger mb-2">Todo List</h1>
        <strong class="mb-2">Todo Count: <%= data.count %></strong>
        <div>
          <a class="btn btn-sm btn-success mb-4" href="/view/create"
            >New Todo</a
          >
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col"># ID</th>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Priority</th>
              <th scope="col">Is Done ?</th>
              <th scope="col">Created Date</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let {id,title,description, priority, isDone, createdAt} of
            data.rows) { %>
            <tr>
              <td><%= id %></td>
              <td><%= title %></td>
              <td><%= description %></td>
              <td><%= priorityList[priority] %></td>
              <td><%= !isDone ? '❌' : '✅' %></td>
              <td><%= createdAt.toLocaleDateString() %></td>
              <td>
                <a class="btn btn-sm btn-secondary me-1" href="/view/<%= id %>"
                  >Read</a
                ><a
                  class="btn btn-sm btn-warning me-1"
                  href="/view/update/<%= id %>"
                  >Edit</a
                ><a
                  onclick="return confirm(`Are you sure?`)"
                  class="btn btn-sm btn-danger"
                  href="/view/delete/<%= id %>"
                  >Delete</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
