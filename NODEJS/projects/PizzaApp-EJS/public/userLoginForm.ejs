{%- include('partials/header') -%}

<!-- content start -->
<div class="pb-5">
  <div class="mx-auto d-flex justify-content-center align-items-center pt-5">
    <div class="card w-50">
      <div class="card-body">
        <h2>User Login</h2>
        <hr />
        <form action="" method="POST">
          <table class="table">
            <tbody>
              <tr>
                <td>Username</td>
                <td>
                  <input
                    type="text"
                    name="username"
                    required
                    class="form-control"
                    value="test"
                  />
                </td>
              </tr>
              <tr>
                <td>Password</td>
                <td>
                  <input
                    type="password"
                    name="password"
                    required
                    class="form-control"
                    value="12345678?aA"
                  />
                </td>
              </tr>
              <tr>
                <td></td>
                <td>
                  <label
                    ><input
                      class="form-check-input"
                      type="checkbox"
                      name="rememberMe"
                      value="1"
                    />
                    Remember Me</label
                  >
                </td>
              </tr>
            </tbody>
          </table>
          <br />
          <input class="btn btn-primary" type="submit" value="OK" />
        </form>
      </div>
    </div>
  </div>
</div>
<!-- content end -->

